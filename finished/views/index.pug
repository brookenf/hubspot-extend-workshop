doctype html
html 
    head
        //- This is pulled over from index.js 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        
    body    
        .container
            header 
                h1 AV Rental Equipment
            //- One-half of the page (desktop) for calendar
            .calendar
                h3 Equipment Availability
                h4(id="month-heading")
                //- Instantiate Calendar here
                #calendar(style={"height": "800px"})
            //- One-half of the page (desktop) for form
            .form
                h3 Reserve Equipment
                p Reserve your equipment below! Equipment rentals are for 3 days.
                //- Add form here
                form(method="POST" id="rentEquipment")
                    label(for="chooseEquipment" id="chooseEquipment") Equipment to Rent
                    select(name="chooseEquipment" id="equipment" form="rentEquipment")
                        option(value="macbook_pro_14") MacBook Pro 14
                        option(value="macbook_pro_16") MacBook Pro 16
                        option(value="canon_rebel_t7") Canon Rebel T7
                        option(value="canon_eos_r10") Canon EOS R10
                        option(value="ptzoptics_30x-ndi_camera") PTZOptics 30X-NDI Camera
                        option(value="ptzoptics_12x-sdi_camera") PTZOptics 12X-SDI Camera
                        option(value="epson_ex3280_projector") Espon EX3280 Projector
                        option(value="epson_pro_ex9240_projector") Espon Pro EX9240 Projector
                    label(for="chooseStartDate") Rental Period Start
                    input(type="date" id="chooseStartDate" name="chooseStartDate")
                    label(for="chooseEndDate") Rental Period End
                    input(type="date" id="chooseEndDate" name="chooseEndDate")
                    input(type="submit" value="Reserve Your Equipment")
        //- Calling the minified script files
        script(src='/dist/calendar.min.js')
        